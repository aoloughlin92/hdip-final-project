<section class="ui raised segment">
    <div class="ui grid">
        <article class="twenty wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each events}}
                    <tr>
                        <td> {{title}} </td>
                        <td> {{formatDate date}}</td>
                        <td><a href="/event/{{_id}}"  class="ui icon button"> <i class="icon folder open"></i></a>
                            <a href="/delete/{{_id}}"  class="ui icon button"> <i class="icon trash"></i></a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>
